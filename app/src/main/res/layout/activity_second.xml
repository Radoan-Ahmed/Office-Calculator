<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="10dp"
            android:background="#FF9800"
            android:fontFamily="sans-serif"
            android:padding="6.8dp"
            android:text="Daily Line Target"
            android:textColor="#F44336"
            android:textColorLink="#FF5722"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/second"
            android:layout_width="177dp"
            android:layout_height="157dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CDDC39"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:text="Individual Operator Efficiency"
            android:textColor="#FF5722"
            android:textSize="38sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/third"
            android:layout_width="174dp"
            android:layout_height="144dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="10dp"
            android:background="#C31818"
            android:clickable="false"
            android:fontFamily="serif"
            android:paddingLeft="9dp"
            android:text="Line Efficiency"
            android:textColor="#FFEB3B"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/fourth"
            android:layout_width="179dp"
            android:layout_height="140dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#4CAF50"
            android:fontFamily="sans-serif"
            android:paddingLeft="6dp"
            android:text="Machine Productivity"
            android:textColor="#FF5722"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/five"
            android:layout_width="176dp"
            android:layout_height="161dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="#2196F3"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="8dp"
            android:text="Labour Productivity"
            android:textColor="#F44336"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/six"
            android:layout_width="176dp"
            android:layout_height="157dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="#9C27B0"
            android:fontFamily="sans-serif"
            android:paddingLeft="6dp"
            android:text="Hourly Production Target"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btClick"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#DC4E4E"
        android:paddingLeft="150dp"
        android:text="Formulax"
        android:textColor="#FFFFFF"
        android:textSize="30sp">

    </TextView>


</LinearLayout>